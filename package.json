{
  "name": "minecraft-core",
  "private": true,
  "version": "25.12.4",
  "description": "Minecraft Core",
  "author": "zXord",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k --success=first \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite dev",
    "dev:electron": "wait-on --timeout 30000 http-get://localhost:5173 && electron . || wait-on --timeout 30000 http-get://localhost:5174 && electron .",
    "test": "node --test",
    "build": "vite build && node scripts/post-build.mjs",
    "build:icons": "node scripts/generate-icon.cjs",
    "start": "electron .",
    "prod": "npm run build && npm run start",
    "pack": "npm run build && npm run build:icons && electron-builder --dir",
    "dist": "npm run build && npm run build:icons && electron-builder",
    "release": "npm run build && npm run build:icons && electron-builder --publish=always"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "concurrently": "^9.1.2",
    "electron": "^28.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.31.0",
    "eslint-plugin-svelte": "^3.9.2",
    "globals": "^16.2.0",
    "png-to-ico": "^3.0.1",
    "rcedit": "^4.0.1",
    "sharp": "^0.33.5",
    "typescript": "^5.8.3",
    "vite": "^6.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@xmcl/installer": "^6.1.0",
    "@xmcl/user": "^4.2.0",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "electron-log": "^5.4.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "express": "^4.18.2",
    "fs-extra": "^11.3.0",
    "lucide-svelte": "^0.511.0",
    "minecraft-data": "^3.89.0",
    "msmc": "^4.1.0",
    "nbt": "^0.8.1",
    "node-fetch": "^2.7.0",
    "pidusage": "^4.0.0",
    "prismarine-nbt": "^2.7.0",
    "progress-stream": "^2.0.0",
    "rimraf": "^5.0.0",
    "selfsigned": "^5.2.0",
    "svelte": "^5.36.8",
    "svelte-sonner": "^1.0.1",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.minecraft-core.app",
    "productName": "Minecraft Core",
    "directories": {
      "output": "dist",
      "buildResources": "build-resources"
    },
    "extraMetadata": {
      "name": "minecraft-core",
      "productName": "Minecraft Core"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "icon.png",
      "build-resources/icon.ico",
      "config/dev-config.cjs"
    ],
    "copyright": "Copyright Â© 2025 zXord",
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false,
      "executableName": "Minecraft Core",
      "icon": "build-resources/icon.ico",
      "signAndEditExecutable": false
    },
    "afterPack": "scripts/afterPack.cjs",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "include": "build-resources/uninstaller.nsh",
      "warningsAsErrors": false,
      "artifactName": "Minecraft-Core-Setup-${version}.exe",
      "displayLanguageSelector": false,
      "deleteAppDataOnUninstall": false,
      "shortcutName": "Minecraft Core",
      "uninstallDisplayName": "Minecraft Core",
      "installerIcon": "build-resources/icon.ico",
      "uninstallerIcon": "build-resources/icon.ico",
      "differentialPackage": true
    },
    "publish": {
      "provider": "github",
      "owner": "zXord",
      "repo": "Minecraft-Core"
    }
  }
}
