{
  "name": "minecraft-core",
  "private": true,
  "version": "1.0.2",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k --success=first \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite dev",
    "dev:electron": "wait-on --timeout 30000 http-get://localhost:5173 && electron . || wait-on --timeout 30000 http-get://localhost:5174 && electron .",
    "build": "vite build",
    "start": "electron .",
    "prod": "npm run build && npm run start",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "release": "npm run build && electron-builder --publish=always"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "concurrently": "^9.1.2",
    "electron": "^28.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.28.0",
    "eslint-plugin-svelte": "^3.9.2",
    "globals": "^16.2.0",
    "svelte": "^5.0.0",
    "typescript": "^5.8.3",
    "vite": "^6.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@xmcl/installer": "^6.1.0",
    "@xmcl/user": "^4.2.0",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "express": "^4.18.2",
    "fs-extra": "^11.3.0",
    "lucide-svelte": "^0.511.0",
    "minecraft-data": "^3.89.0",
    "msmc": "^4.1.0",
    "nbt": "^0.8.1",
    "node-fetch": "^2.7.0",
    "pidusage": "^4.0.0",
    "prismarine-nbt": "^2.7.0",
    "progress-stream": "^2.0.0",
    "rimraf": "^5.0.0",
    "svelte-sonner": "^1.0.1",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.minecraft-core.app",
    "productName": "Minecraft Core",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "icon.png",
      "dev-config.cjs",
      "build/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "build/uninstaller.nsh"
    },
    "publish": {
      "provider": "github",
      "owner": "zXord",
      "repo": "Minecraft-Core"
    }
  }
}
